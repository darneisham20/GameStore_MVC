@model IEnumerable<CustomerIndex>

<br />

<h3>
    Customer
    <small class="text-muted">List Page</small>
</h3>

<hr />

<table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.Id</td>
                    <td>@customer.Name</td>
                    <td>@customer.Email</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@customer.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@customer.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@customer.Id">Delete</a>
                    </td>
                </tr>
            }
    </tbody>
</table>