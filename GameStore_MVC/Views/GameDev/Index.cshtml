@*Game Developer Cards*@

@if (Model.Count() > 0)
{
    <div class="w-100 d-flex flex-wrap" style="justify-content:center">
        @foreach (var item in Model)
        {
            <div class="card mx-3 mb-4" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">@item.Developer</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Id: @item.Id</h6>
                    <p class="card-text">
                        <b>City: </b>@item.City <br />
                        <b>Country: </b>@item.Country <br />
                        <b>Est: </b> @item.Est <br />
                        @*                        <b>Games:</b> @item.Games <br />*@

                    </p>
                </div>
                <div class="button-body mb-2" style="margin-left:auto;margin-right:auto">
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>

                </div>
            </div>
        }
    </div>
}
else
{
    <p>There are no game developers at this time! Please check again later or create a game developer.</p>
}
