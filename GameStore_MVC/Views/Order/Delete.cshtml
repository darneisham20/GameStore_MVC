@model GameStore_MVC.Data.Entities.Order

@{
    ViewData["Title"] = "Delete";
}

<br />

<h3>
    Order @Model.Id
    <small class="text-muted">Deletion Page</small>
</h3>
<h4 class="text-danger">Are you sure you want to delete Order #@Model.Id?</h4>

<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Id)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Id)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Title)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfOrder)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfOrder)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-primary" asp-action="Index">Back to Order List!</a>
    </form>
</div>
